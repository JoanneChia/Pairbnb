<%= render 'navbar'%>

<div class="container">
<div class="jumbotron listing_table_2">

<h1>Your New Listing</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
      <th>Image</th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @listing.name %></td>
        <td><%= @listing.price %></td>
        <td><%= @listing.description %></td>
        <td><%= image_tag @listing.image.url.to_s if @listing.image.url.present? %></td>
      </tr>
  </tbody>
</table>

<h1>All your listings</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
      <th>Image</th>
    </tr>
  </thead>

  <tbody> 
    <% @all_listings.each do |listing| %>
      <tr>
        <td><%= listing.name %></td>
        <td><%= listing.price %></td>
        <td><%= listing.description %></td>
        <td><%= image_tag @listing.image.url.to_s if @listing.image.url.present? %></td>  
      </tr>
    <% end %>  
  </tbody>
</table>



<%= link_to 'Edit', edit_listing_path(@listing) %> |
<%= link_to 'Back', listings_path %>
<%= render 'links' %>

</div>
</div>



