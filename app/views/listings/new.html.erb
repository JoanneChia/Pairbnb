<%= render 'navbar'%>

<%= form_for :listing, html: {multipart: true} do |f| %>
  <% if @listing.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul>
      <% @listing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="container">
  <div class="new-form">
    <h1>Create Your Listing</h1>
      <fieldset class="form-group">
        <%= f.label :name%>
          <%= f.text_field :name, class: 'form-control', placeholder: 'Name and Address'%>
            <small class="text-muted">Specificity is key.</small>
      </fieldset>
    <fieldset class="form-group">
    <%= f.label :price %>
    <%= f.number_field :price, class: 'form-control'%>
  </fieldset>
  <fieldset class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: 'form-control', placeholder: 'Home amenities, style?' %>
    <small class="text-muted">Specific but brief</small>
  </fieldset>
  <fieldset class="form-group">
    <%= f.file_field :image, class: 'form-control-file' %> 
  </fieldset>
  <%= f.submit "Create Lisiting", class: "btn btn-primary"%>
</form>
<% end %>
</br>
</br>
<%= link_to 'Back', listings_path %>
</div>
</div>



